<% content_for :page_title, "Index" %>

<div class="section">
  <div class="container">
    <div class="columns">
      <% @posts.each do |post| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= link_to post.title, post %></p>
                </div>
              </div>
              <div class="content">
                <%= post.content %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
